@model aspnet_mvc_test_01.Models.Category

@{
    ViewData["Title"] = "Category Update Page";
}
<h1>@ViewData["Title"]</h1>

@if (TempData["alear"] != null)
{
    <div class="alert alert-@TempData["status"] alert-dismissible fade show" role="alert">
        <strong>แจ้งเตือนจากระบบ !</strong> @TempData["msg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<form action="@Url.RouteUrl("category_update_data" , new {id = Model.category_id })" method="post">

     <input type="hidden" name="category_id" value="@Model.category_id" class="form-control" >

    <div class="mb-3">
        <label class="form-label">Name Category</label>
        <input type="text" name="category_name" value="@Model.category_name" class="form-control" required>
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-success btn-block">create data</button>
    </div>

</form>