@{
    var author_list = ViewData["author_list"] as IEnumerable<aspnet_mvc_test_01.Models.Author>;
    var category_list = ViewData["category_list"] as IEnumerable<aspnet_mvc_test_01.Models.Category>;
}


<p> book create Page </p>


<div class="card">
    <div class="card-body">

        <form action="@Url.RouteUrl("book_create_data")" method="post">

            <div class="row">
                <div class="col-sm-6">
                    <label>Name Book</label>
                    <input type="text" class="form-control" name="book_name" required>
                </div>
                <div class="col-sm-6">
                    <label>Count Page</label>
                    <input type="number" class="form-control" name="book_num_page" required>
                </div>
            </div>

            <div class="mb-3">
                <label>Select Author</label>
                <select class="form-select" name="book_author_id" required>
                    <option value="" selected>Pls Select Author</option>
                    @foreach (var item in author_list)
                    {
                        <option value="@item.author_id">@item.author_fullname</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label>Select Category</label>
                <select class="form-select" name="book_category_id" required>
                    <option value="" selected>Pls Select Category</option>
                    @foreach (var item in category_list)
                    {
                        <option value="@item.category_id">@item.category_name</option>
                    }
                </select>
            </div>


            <div style="padding-bottom : 1%"></div>

            <button class="btn btn-block btn-success">create data</button>


        </form>


    </div>
</div>
